.navbar.container
	ul(style="display:flex; justify-content:flex-start; align-items:center")
		// li
			button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse') &#9776
		li
			a(href='/') Project name
		li(class=(title === 'Home') ? 'active' : undefined)
			a(href='/') Home
		li(class=(title === 'API Examples') ? 'active' : undefined)
			a(href='/api') API Examples
		li(class=(title === 'Contact') ? 'active' : undefined)
			a(href='/contact') Contact
		li
			a(href='/status') Status
		ul(style="margin-left:auto")
			if !user
				li.u-pull-right(class=(title === 'Create Account') ? 'active' : undefined)
					a(href='/signup') Create Account
				li.u-pull-right(class=(title === 'Login') ? 'active' : undefined)
					a(href='/login') Login
			else
				li.dropdown(class=(title === 'Account Management') ? 'active' : undefined)
					// a(href="#")= user.username || user.email || user.id
					a(href="#")= user
					ul(style="position:fixed; background-color:white;  font-size:100%;")
						li
							a(href='/account') My Account
						li
							hr.dropdownhr
						li
							a(href='/logout') Logout

style.
	.navbar {
		padding: 5px 0;
		margin-bottom:10px;
		position:sticky; 
		top:0;
		left:10%; 
		background-color:white;
		z-index:1111;
		border-bottom: 1px solid;
	}

	.navbar ul, .navbar li, .navbar button {
		margin: 0
	}
	.navbar li {
		list-style-type:none;
		padding: 0 16px;
	}
	.active {
		border-radius: 7px;
		border :1px solid;
	}
	.dropdown ul {
		display:none;
	}
	.dropdown:hover ul{
		display:block
	}
	.dropdown ul li {
		padding: 0;
	}
	.dropdown ul li hr {
		margin: 3px 0; width:100%
	}
	
	